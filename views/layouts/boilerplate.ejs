    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- new -->
    <script src="/js/script.js"></script>
    <script>
      document.getElementById('searchForm').addEventListener('submit', async function (event) {
        event.preventDefault(); // Prevent the form from reloading the page
    
        const query = document.getElementById('searchInput').value; // Get the search input value
        const response = await fetch(`/search?query=${query}`);
        const listings = await response.json(); // Parse the JSON response
    
        const listingsContainer = document.getElementById('listingsContainer'); // The container for listings
        listingsContainer.innerHTML = ''; // Clear existing listings
    
        // Render new listings
        if (listings.length > 0) {
          listings.forEach(listing => {
            const listingCard = `
              <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card">
                  <a href="/listings/${listing._id}">
                    <img src="${listing.image.url}" class="card-img-top" alt="${listing.title}">
                    <div class="card-body">
                      <h5 class="card-title">${listing.title}</h5>
                      <p class="card-text">â‚¹${listing.price.toLocaleString('en-IN')} / Night</p>
                    </div>
                  </a>
                </div>
              </div>
            `;
            listingsContainer.innerHTML += listingCard;
          });
        } else {
          listingsContainer.innerHTML = '<p>No results found.</p>';
        }
      });
    </script>
    
 </body>
